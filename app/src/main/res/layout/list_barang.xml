<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        android:paddingBottom="50dp">

    <ImageView
        android:id="@+id/iconBarang"
        android:layout_width="@dimen/avator_size"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        tools:src="@drawable/logo" />

    <TextView
        android:id="@+id/namaBarang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/list_avatar"
        tools:text="Nama Barang"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="@dimen/article_subheading" />

    <TextView
        android:id="@+id/hargaBarang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_title"
        android:layout_marginLeft="60dp"
        android:layout_toRightOf="@+id/list_avatar"
        android:layout_marginTop="30dp"
        android:textColor="@color/colorPrimary"
        android:ellipsize="end"
        android:singleLine="true"
        tools:text="HargaBarang"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="@dimen/list_body" />
    </android.support.v7.widget.CardView>
</RelativeLayout>
