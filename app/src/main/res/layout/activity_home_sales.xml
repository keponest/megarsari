<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/inputbarang"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="133dp"
            android:background="@drawable/angle"
            android:gravity="center"
            android:padding="16dp"
            android:text="Input Barang"
            android:textColor="#fff"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/daftarbarang"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/inputbarang"
            android:layout_marginEnd="15dp"
            android:background="@drawable/angle"
            android:gravity="center"
            android:padding="16dp"
            android:text="Daftar Barang"
            android:textColor="#fff"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/reportsales"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@+id/inputbarang"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="64dp"
            android:background="@drawable/angle"
            android:gravity="center"
            android:padding="16dp"
            android:text="Report"
            android:textColor="#fff"
            android:textSize="16dp" />


    </RelativeLayout>

</FrameLayout>